{
    "name": "baseworkload",
    "service-location-port": ["http://am0.example.com:8080", "http://am1.example.com:8080"],
    "loading-style": "roundrobin, random, ha", 
    "value-base": 0,
    "value-top": 100000,
    "threshold": 800,
    "threshold-hit-continue": false,
    "maintain-connection": true,
    "task": [
        {
            "name": "basetask-authenticate",
            "threshold": 400,
            "iteration": 4,
            "threshold-hit-continue": true,
            "maintain-connection": true
        },
        {
            "name": "sleep",
            "threshold": 50,
            "iteration":0
        },
        {
            "name": "basic",
            "iteration": 0
        },
        {
            "name": "basetask-logout",
            "threshold": 100,
            "iteration": 1,
            "threshold-hit-continue": false,
            "maintain-connection": false
        }
    ]
}
