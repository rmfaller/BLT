{
    "name": "basejob",
    "load-generator": "this host",
    "services-description": "bunch of vm in Azure",
    "service-location-port": ["http://am0.example.com:8080", "http://am1.example.com:8080"],
    "loading-style": "roundrobin, random, ha", 
    "value-base": 0,
    "value-top": 100000,
    "run-thread": "parallel, serial",
    "maintain-connection": true,
    "workload": [
        {
            "name": "baseworkload",
            "iteration": 2,
            "start-delay": 0,
            "threads": 3,
            "thread-group-size": 2,
            "thread-interval": 20,
            "value-base": 10,
            "value-top": 1000,
            "threshold": 200,
            "threshold-hit-continue": true,
            "maintain-connection": true
        },
        {
            "name": "basicworkload",
            "iteration": 0,
            "start-delay": 60,
            "threads": 2,
            "thread-group-size": 0,
            "thread-interval": 0
        },
        {
            "name": "anotherworkload",
            "iteration": 0,
            "start-delay": 0,
            "threads": 1,
            "thread-group-size": 0,
            "thread-interval": 0,
            "value-base": 100,
            "value-top": 100000,
            "threshold": 400,
            "threshold-hit-continue": false,
            "maintainConnection": false
        }
    ]
}
