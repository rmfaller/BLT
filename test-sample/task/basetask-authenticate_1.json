{
    "name": "basetask-authenticate",
    "service-location-port": ["http://am0.example.com:8080", "http://am1.example.com:8080"],
    "value-base": 0,
    "value-top": 100,
    "request": "POST",
    "header": { 
        "X-OpenAM-Username": "user.$BLT-RANDOM-NUMBER",
        "X-OpenAM-Password": "password",
        "Content-Type": "application/json"
    },
    "url-endpoint": "/am/json/",
    "url-payload": "user.$BLT-RANDOM-NUMBER",
    "data-payload": {
        "_id": "user.$BLT-RANDOM-NUMBER",
        "contactInformation": {
            "telephoneNumber": "888 111 $BLT-RANDOM-NUMBER",
            "emailAddress": "user.$BLT-RANDOM-NUMBER@example.com"
        },
        "name": {
            "familyName": "$BLT-RANDOM-NUMBER",
            "givenName": "User"
        },
        "displayName": "User $BLT-RANDOM-NUMBER",
        "manager": [{
                "_id": "user.666",
                "displayName": "User 666"
            }]
    }
}