{
    "name": "basetask-authenticate",
    "loading-style": "roundrobin, random, ha", 
    "value-base": 0,
    "value-top": 1000,
    "service-location-port": ["$BLT-AMHOST0", "$BLT-AMHOST1"],
    "request": "POST",
    "header": { 
        "X-OpenAM-Username": "user.$BLT-RANDOM-NUMBER",
        "X-OpenAM-Password": "$BLT-PASSWORD",
        "Content-Type": "application/json"
    },
    "url-endpoint": "/$BLT-AM-REALM/json/",
    "url-payload": "user.$BLT-RANDOM-NUMBER",
    "data-payload": {
        "_id": "user.$BLT-RANDOMVALUE",
        "contactInformation": {
            "telephoneNumber": "888 111 $BLT-RANDOMVALUE",
            "emailAddress": "user.$BLT_RANDOMVALUE@example.com"
        },
        "name": {
            "familyName": "$BLT-RANDOM-NUMBER",
            "givenName": "User"
        },
        "displayName": "User $BLT-RANDOMVALUE",
        "manager": [{
                "_id": "user.666",
                "displayName": "User 666"
            }]
    }
}